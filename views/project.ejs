<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Details - <%= project.title %></title>
  <link rel="stylesheet" href="/css/main.css" />
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(response => response.json())
        .then(data => {
          document.getElementById("quote").textContent = `"${data.quote}"`;
          document.getElementById("author").textContent = `- ${data.author}`;
        });
    });
  </script>
</head>
<body tabindex="-1">
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <br />

  <!-- Hero Section with Project Title and Intro -->
  <div class="hero bg-base-200 rounded-lg p-6">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold"><%= project.title %></h1>
        <p class="py-6">Below, you will find detailed information about the project: <%= project.title %>.</p>
      </div>
    </div>
  </div>

  <br />

  <!-- Project Image -->
  <div class="container mx-auto text-center">
    <img src="<%= project.feature_img_url %>" alt="<%= project.title %> Image" class="rounded-lg w-1/2 mx-auto" />
  </div>

  <br />

  <!-- Project Introduction -->
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold">Project Introduction</h2>
    <p><%= project.intro_short %></p>
  </div>

  <br />

  <!-- Project Impact -->
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold">Impact</h2>
    <p><%= project.impact %></p>
  </div>

  <br />

  <!-- External Link -->
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold">More Information</h2>
    <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-primary">Learn More</a>
  </div>

  <br />

  <!-- Display Random Quote -->
  <div class="container mx-auto text-center">
    <h2 class="text-xl font-bold">Quote</h2>
    <p id="quote" class="italic text-lg"></p>
    <p id="author" class="text-md"></p>
  </div>

  <br />

  <!-- Back Button -->
  <div class="container mx-auto text-center">
    <a href="#" onclick="history.back(); return false;" class="btn btn-secondary">Back</a>
  </div>

</body>
</html>
